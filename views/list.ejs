<%- include("header") -%>

<div class="box" id="heading">
    <!-- NOTE:-> <% %> These tags are known as scriptlet tags and we need to add them in every line of javascript code or say the codes that are not html. 
    These tag enable us to use control flow javascript only   -->

    <h1>
        <%= listTitle %>
    </h1>
</div>

<div class="box">

    <% newListItems.forEach(function(item){ %>

    <form action="/delete" method="post">

        <div class="item">

            <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()"></input>
            <p><%= item.name %></p>

        </div>

        <input type="hidden" name="listName" value="<%= listTitle %>"></input>

    </form>
    <% }) %>


    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>

</div>

<%- include("footer") -%>